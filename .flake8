[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    venv2,
    .venv,
    build,
    dist,
    *.egg-info,
    tests/,
    scripts/,
    ./deploy/bin/dashfleet-agent.exe/_internal/,
    test_*.py

# Ignorer les erreurs de dépendances
ignore =
    # Whitespace issues in blank lines (too noisy)
    W293,
    W291,
    # Line too long (can be handled separately)
    E501,
    # Binary operator line break (common in complex conditions)
    W503,
    # Arithmetic operator whitespace (for RGB values, dimensions, etc)
    E226

# Configuration pour être moins strict
per-file-ignores =
    __init__.py:F401
    tests/*:F811,F841,F401,E302,E305
